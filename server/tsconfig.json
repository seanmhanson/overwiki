{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "types": ["jest", "node"],
    "typeRoots": [ "./node_modules/@types" ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": [ "node_modules/*" ]
    }
  },
  "include": [ "src/**/*.ts", "test/**/*.spec.ts" ]
}