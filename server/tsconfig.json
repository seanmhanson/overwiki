{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "types": ["node", "jest", "mongodb"],
    "paths": {
      "dao": ["src/dao"],
      "fixtures": ["test/fixtures"],
      "models": ["src/models"],
      "routes": ["src/routes"],
      "svc": ["src/svc"]
    }
  },
  "exclude": ["node_modules", "test"]
}
